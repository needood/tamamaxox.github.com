@import "normalize"
bc = #EEE
indent = 120px
width =600px

body
	font-size:12px;
	color:#555
a
	color:#555
p
	max-width:550px;
form
	textarea
		border:1px solid bc
		outline:0
	button
		border:1px solid bc
		padding:2px 8px 
		color:#333
		_border_radius_(3px)
		&:hover
			color:#555
ul
	list-style:none;

.title
	_cf_()
	h1
		_fl_()
		margin:0 10px 0 0
		padding:0
		font-size:18px
		font-weight:normal
		border-bottom:3px solid darken(red,8%)
	p
		margin:5px 0 -5px 0
		padding:0
	border-bottom:1px solid bc
	padding-left:indent
	_hh_(60px)
.content
	padding:30px 0 0 0
	margin-left:indent
	width:width
	border-bottom:1px dashed bc
#nav
	line-height:30px;
	height:0px;
	text-align:right
	margin-left:indent
	width:width
	span,a
		margin-right:5px;
		border-right:1px solid darken(bc,10%);
		padding-right:5px;
		&.loginbtn
			margin-right:0px;
			border-right:none
			padding-right:0px;
			color:#AAA
			font-weight:bold
			text-decoration:none;
			&:hover
				text-decoration:underline;
.comment
	margin-top:40px;
	margin-bottom:0px;
	.commentt
		font-weight:bold
	.commentb
		margin-top:0px;
	.commentform
		margin-bottom:10px;

.action
	_hh_(24px)
	color:darken(bc,8%)
	font-weight:bold;
	&:before
		content:">"
	a
		font-weight:normal;
		margin-left:5px;
table
	.q
		vertical-align:top;
		padding-bottom:5px;
		padding-right:5px;
		text-align:right;
.block
	_cf_()
.submit
	_center_()
